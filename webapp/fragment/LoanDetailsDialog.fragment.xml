<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="LoanDetails"
		title="LoanDetails">
		<content>
			<VBox class="sapUiSmallMargin" id="LoanDetailsformContainer" width="800px">
				<f:SimpleForm id="SimpleFormChangeColumn_LoanDetails"
					layout="ColumnLayout"
                    title="Loan ID: {/Loanid}"
					columnsM="2"
					columnsL="2"
					columnsXL="2">
					<f:content>
						<Label id="LoanDetailsBooksLabel" text="Books" />
						<Text id="LoanDetailsBooksText" text="{/Books}" wrapping="true" />
						<Label id="LoanDetailsCustomerLabel" text="Customer" />
						<Input id="LoanDetailsCustomerInput" editable="false" value="{/Reader}">
							<layoutData>
								<f:ColumnElementData id="LoanDetailsColumnElementData" cellsSmall="8" cellsLarge="8" />
							</layoutData>
						</Input>
						<Label id="LoanDetailsStartDateLabel" text="Start Date" />
						<DatePicker id="loandetails_input_start_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" editable="false" value="{path:'/FormattedStartDate', type:'sap.ui.model.odata.type.Date', formatOptions: { pattern: 'dd MMMM yyyy'}}" />
						<Label id="LoanDetailsEndDateLabel" text="End Date" />
						<DatePicker id="loandetails_input_end_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" editable="false" value="{path:'/FormattedEndDate', type:'sap.ui.model.odata.type.Date', formatOptions: { pattern: 'dd MMMM yyyy'}}" />

						<Label id="LoanDetailsStatusLabel" text="Status" />
						<ComboBox id="loanStatusComboBox" placeholder="Select Loan Status" editable="{= ${/IsMaintainable} === true}" selectedKey="{ path: '/Status', mode:'OneTime' }">
                                    <core:Item id="loan_input_finished" key="FINISHED" text="Finished" />
                                    <core:Item id="loan_input_pickedup" key="PICKED UP" text="Picked Up" />
                                    <core:Item id="loan_input_delayed" key="DELAYED" text="Delayed" />
                        </ComboBox>
						<Label id="LoanDetailsPickupDateLabel" text="Pickup date" />
						<DatePicker id="loandetails_input_pickup_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" editable="false" value="{path:'/FormattedPickupDate', type:'sap.ui.model.odata.type.Date', formatOptions: { pattern: 'dd MMMM yyyy'}}" />
						<Label id="LoanDetailsReturnDateLabel" text="Return date" />
						<DatePicker id="loandetails_input_return_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" editable="{= ${/IsMaintainable} === true}" value="{= ${/Status} === 'FINISHED' ? ${/FormattedReturnDate} : ''}"  />
					</f:content>
				</f:SimpleForm>
			</VBox>
            <Toolbar id="LoanDetailsToolbar">
				<content>
					<ToolbarSpacer id="LoanDetailsToolbarSpacer" />
					<Button id="LoanDetailsUpdate"
						text="Update"
						type="Emphasized"
						press="onUpdatePressed"
						ariaHasPopup="Dialog"
						visible="{= ${/IsMaintainable} === true}" />
					<Button id="LoanDetailsCloseDialog"
						text="Close"
						type="Emphasized"
						press="closeDialog"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</content>
	</Dialog>
</core:FragmentDefinition>