<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="ReservationDetails"
		title="ReservationDetails">
		<content>
			<VBox class="sapUiSmallMargin" id="ReservationDetailsformContainer" width="800px">
				<f:SimpleForm id="SimpleFormChangeColumn_ReservationDetails"
					layout="ColumnLayout"
                    title="Reservation ID: {/Reservationid}"
					columnsM="2"
					columnsL="2"
					columnsXL="2">
					<f:content>
						<Label id="ReservationDetailsBooksLabel" text="Books" />
						<Text id="ReservationDetailsBooksText" text="{/Books}" wrapping="true" />
						<Label id="ReservationDetailsCustomerLabel" text="Customer" />
						<Input id="ReservationDetailsCustomerInput" editable="false" value="{/Reader}">
							<layoutData>
								<f:ColumnElementData id="ReservationDetailsColumnElementData" cellsSmall="8" cellsLarge="8" />
							</layoutData>
						</Input>
						<Label id="ReservationDetailsStartDateLabel" text="Start Date" />
						<DatePicker id="Reservationdetails_input_start_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" editable="false" value="{path:'/FormattedStartDate', type:'sap.ui.model.odata.type.Date', formatOptions: { pattern: 'dd MMMM yyyy'}}" />
						<Label id="ReservationDetailsEndDateLabel" text="End Date" />
						<DatePicker id="Reservationdetails_input_end_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" editable="false" value="{path:'/FormattedEndDate', type:'sap.ui.model.odata.type.Date', formatOptions: { pattern: 'dd MMMM yyyy'}}" />

						<Label id="ReservationDetailsStatusLabel" text="Status" />
						<ComboBox id="ReservationStatusComboBox" placeholder="Select Reservation Status" editable="{= ${/Status} === 'RESERVED' }" selectedKey="{ path: '/Status', mode:'OneTime' }">
                                    <core:Item id="Reservation_input_finished" key="RESERVED" text="Reserved" />
                                    <core:Item id="Reservation_input_pickedup" key="PICKED UP" text="Picked Up" />
                                    <core:Item id="Reservation_input_delayed" key="CANCELED" text="Canceled" />
                        </ComboBox>
					</f:content>
				</f:SimpleForm>
			</VBox>
            <Toolbar id="ReservationDetailsToolbar">
				<content>
					<ToolbarSpacer id="ReservationDetailsToolbarSpacer" />
					<Button id="ReservationDetailsUpdate"
						text="Update"
						type="Emphasized"
						press="onUpdatePressed"
						ariaHasPopup="Dialog"
						visible="{= ${/Status} === 'RESERVED' }" />
					<Button id="ReservationDetailsCloseDialog"
						text="Close"
						type="Emphasized"
						press="closeDialog"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</content>
	</Dialog>
</core:FragmentDefinition>