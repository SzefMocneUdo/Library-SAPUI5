<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="CreateReservation"
		title="{i18n>title.CreateNewReservation}">
		<content>
			<VBox class="sapUiSmallMargin" id="CreateReservationformContainer" height="350px" width="400px">
				<f:SimpleForm id="SimpleFormChangeColumn_CreateReservation">
					<f:content>
						<Label id="CreateReservationBooksLabel" text="Books" />
						<MultiComboBox id="createReservation_booksMultiComboBox" required="true" showSecondaryValues= "true" items="{path:'/Book_copySet', parameters:{expand:'ToBook'}, filters: [{path: 'Availability', operator: 'EQ', value1: 'AVAILABLE'}]}"  valueStateText="{i18n>bookManagement.authorsEmptiness}">
                            <core:ListItem id="createReservation_inputbooks" key="{parts:['Bookid'], formatter:'sap.ui.base.ManagedObject.escapeSettingsValue'}" text="{Bookid}" additionalText="{ToBook/Title}"/>
                        </MultiComboBox>
						<Label id="CreateReservationCustomerLabel" text="Customer" required="true" />
						<Input id="CreateReservationCustomerInput">
							<layoutData>
								<f:ColumnElementData id="CreateReservationColumnElementData" cellsSmall="8" cellsLarge="8" />
							</layoutData>
						</Input>
						<Label id="CreateReservationStartDateLabel" text="Start Date" />
						<DatePicker id="CreateReservation_input_start_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" />
						<Label id="CreateReservationEndDateLabel" text="End Date" />
						<DatePicker id="CreateReservation_input_end_date" maxDate="{ todayDate }" displayFormat="dd MMMM yyyy" />
					</f:content>
				</f:SimpleForm>
			</VBox>
            <Toolbar id="CreateReservationToolbar">
				<content>
					<ToolbarSpacer id="CreateReservationToolbarSpacer" />
                    <Button id="CreateReservationSave"
						text="Save"
						type="Accept"
						press="onSavePressed"
						ariaHasPopup="Dialog" />
					<Button id="CreateReservationCancel"
						text="Cancel"
						type="Reject"
						press="closeDialog"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</content>
	</Dialog>
</core:FragmentDefinition>