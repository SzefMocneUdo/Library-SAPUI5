<mvc:View
 controllerName="zkzilibraryproject.controller.BookDisplay"
 xmlns:mvc="sap.ui.core.mvc"
 xmlns:core="sap.ui.core"
 xmlns="sap.m"
 xmlns:smartForm="sap.ui.comp.smartform"
 xmlns:smartField="sap.ui.comp.smartfield"
 xmlns:f="sap.ui.layout.form">
        <Page id="BookDisplay" >
        <customHeader>
            <OverflowToolbar id="bookdisplay_toolbar_header">
                <Title id="bookdisplay_title_header" text="{i18n>BookDetails}"/>
                <ToolbarSpacer id="bookdisplay_spacer_header" />
            </OverflowToolbar>
        </customHeader>

        <smartForm:SmartForm id="bookdisplay_smartform">
            <smartForm:Group id="bookdisplay_group">
                <smartForm:GroupElement id="bookdisplay_element_isbn" label="{/#Book/ISBN/@sap:label}">
                    <smartField:SmartField id="bookdisplay_field_isbn" value="{ISBN}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement id="bookdisplay_element_title" label="{/#Book/Title/@sap:label}">
                    <smartField:SmartField id="bookdisplay_field_title" value="{Title}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement id="bookdisplay_element_authors" label="{/#Book/Authors/@sap:label}">
                    <smartField:SmartField id="bookdisplay_field_authors" value="{Authors}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement id="bookdisplay_element_genres" label="{/#Book/Genres/@sap:label}">
                    <smartField:SmartField id="bookdisplay_field_genres" value="{Genres}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement id="bookdisplay_element_description" label="{/#Book/Description/@sap:label}">
                    <smartField:SmartField id="bookdisplay_field_description" value="{Description}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement id="bookdisplay_element_language" label="{/#Book/Language/@sap:label}">
                    <smartField:SmartField id="bookdisplay_field_language" value="{Language}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement id="bookdisplay_element_rating" label="{/#Book/Rating/@sap:label}">
                    <RatingIndicator id="bookdisplay_field_rating" class="sapUiNoMargin" maxValue="10" displayOnly="true" iconSize="1rem" value="{Rating}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement id="bookdisplay_element_publication_date" label="{/#Book/PublicationDate/@sap:label}">
                    <smartField:SmartField id="bookdisplay_field_publication_date" value="{path:'PublicationDate', type:'sap.ui.model.odata.type.Date', formatOptions: { pattern: 'dd MMMM yyyy'}}" />
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
    </Page>
</mvc:View>